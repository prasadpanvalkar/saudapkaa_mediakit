# =============================================================================
# SAUDAPAKKA PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your production values
# NEVER commit .env to version control!

# -----------------------------------------------------------------------------
# Django Core Settings (REQUIRED)
# -----------------------------------------------------------------------------
# Generate a new key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-generate-new-one

DEBUG=False
ALLOWED_HOSTS=saudapakka.com,72.61.246.159

# -----------------------------------------------------------------------------
# Database Configuration (REQUIRED)
# -----------------------------------------------------------------------------
POSTGRES_DB=saudapakka_db
POSTGRES_USER=saudapakka_user
POSTGRES_PASSWORD=your-strong-database-password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# CORS Configuration (REQUIRED)
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=https://saudapakka.com

# -----------------------------------------------------------------------------
# Email Configuration (REQUIRED)
# -----------------------------------------------------------------------------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@saudapakka.com

# -----------------------------------------------------------------------------
# Sandbox KYC API (REQUIRED)
# -----------------------------------------------------------------------------
SANDBOX_API_KEY=your-sandbox-api-key
SANDBOX_API_SECRET=your-sandbox-api-secret
